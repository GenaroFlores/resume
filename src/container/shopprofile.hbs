<main>
    <div class="ms-5">
        <h1 class="my-5">{{header}}</h1>
        {{#with purchase}}
            <ul class="nav nav-tabs">
                {{#each tabs}}
                    <li class="nav-item">
                        <a class="{{#if @first}} nav-link active {{else}} nav-link {{/if}}" aria-current="page" href="#">{{this}}</a>
                    </li>
                {{/each}}
            </ul>
            {{#with actionBlock}}
                <div class="row">
                    <div class="col-4 mt-3">
                        <form>
                            <label class="form-label"></label>
                            <input class="form-control" placeholder="{{#with input}} {{placeholder}} {{/with}}">
                        </form>
                    </div>
                </div>
            {{/with}}
        {{/with}}
    </div>
    
</main>