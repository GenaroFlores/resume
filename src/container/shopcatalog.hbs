<main>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb ms-5">
            {{#each breadcrumb}}
                <li class="breadcrumb-item" {{#if @last}} class="breadcrumb-item active" aria-current="page" {{/if}}>
                    <a href="{{url}}">{{name}}</a>
                </li>
            {{/each}}
        </ol>
    </nav>

    <div class="row ms-5 mt-5">

        <h1 class="my-3">{{header}}</h1>
        {{#each sortBlock}}
            <div class="col-3 my-5">
                <select class="form-select">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
        {{/each}}

        <div class="col-4">
            <div class="card p-3">
                {{#with filterBlock}}

                    {{#with sellers}}
                        <p>{{title}}</p>
                        {{#each list}}
                            <div class="form-check m-2">
                                <input class="form-check-input" type="checkbox">
                                <label class="form-check-label">
                                    {{value}}
                                </label>
                            </div>
                        {{/each}}
                    {{/with}}

                    <hr>

                    {{#with brands}}
                        <p>{{title}}</p>
                        {{#with input}}
                            <input type="search" class="form-control mb-2"  placeholder="{{placeholder}}">
                        {{/with}}
                        {{#each options}}
                                <div class="form-check m-2">
                                <input class="form-check-input" type="checkbox">
                                <label class="form-check-label">
                                    {{value}}
                                </label>
                            </div>
                        {{/each}}
                    {{/with}}

                    <hr>

                    {{#with price}}
                        <p>{{title}}</p>
                        {{#each range}}
                            <input type="search" class="form-control mb-2"  placeholder="{{this}}">
                        {{/each}}

                        {{#with button}}
                            <button class="btn btn-outline-secondary col-3" href="{{link}}">
                                {{text}}
                            </button>
                        {{/with}}
                    {{/with}}

                    <hr>

                    {{#each filterList}}
                        <p>{{title}}</p>
                        {{#each options}}
                            <div class="form-check m-2">
                                <input class="form-check-input" type="checkbox">
                                <label class="form-check-label">
                                    {{value}}
                                </label>
                            </div>
                        {{/each}}
                        <hr>
                    {{/each}}

                {{/with}}
            </div>
        </div>

        <div class="col-8">
            {{#each goodsList}}
            
                    {{> catalogitem}}
               
            {{/each}}    
        </div>
        
    </div>

    {{> shop-action}}

</main>