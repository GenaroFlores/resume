{{!-- 
Це код container файлу для work сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/work"
--}}

<div>
    {{#with main}}
        <main>
            <section>
                {{> title data="Work history" big=true}}
                <div>
                    <ul>
                        {{#each works}}
                        <li>

                            <div>
                                {{position}}
                            </div>
                            
                            <br>

                            <div>
                                {{duration.from}} - 
                                {{#if duration.to}} 
                                    {{duration.to}} 
                                {{else}} 
                                    (currently working) 
                                {{/if}}
                            </div>

                            <br>

                            <div>
                               {{#if company.name}}
                               {{> link text=company.name href=company.url blank=true noLine=true}}
                               {{else}}
                                    <b>{{company.name}}</b>
                               {{/if}}
                            </div>
                            
                            <br>
                            <br>

                            <div>
                                <strong>Projects ({{projectAmount}})</strong>
                            </div>

                            <br>

                            <ul>
                                {{#each projects}}
                                <li>
                                    {{> link text=name href=url blank=true noLine=true}}
                                    <br>
                                    <div>
                                        <p>{{about}}</p>
                                    </div>
                                    <br>
                                    <div>
                                        <em>Project stacks  ({{stacksAmount}})</em>
                                    </div>
                                    <br>
                                    <ul>
                                        {{#each stacks}}
                                        <li>
                                        {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                    <br>
                                    <div>
                                        <em>Project awards  ({{awardsAmount}})</em>
                                    </div>
                                    <br>
                                    <ul>
                                        {{#each awards}}
                                        <li>
                                        {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                                {{/each}}
                            </ul>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </section>
        </main>
    {{/with}}
</div>

