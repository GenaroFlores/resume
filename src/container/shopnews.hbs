<main>
    {{> breadcrumb}}
    <div class="row">
        <div class="col-12 mx-5 mt-5">
            {{#with newsData}}
                <img class="card-img-top" src={{photo}} alt="Product photo">
                {{#with head}}
                    <h2 class="my-4">{{heading}}</h2>
                    <p>{{description}}</p>
                {{/with}}
                {{#each body}}
                    <h4>{{title}}</h4>
                    <p>{{text}}</p>
                {{/each}}
            {{/with}}
        </div>
        <hr class="mt-5">
        <div>
            {{#with newsOtherBlock}}
                 <div class="my-5">
                    <h2 class="text-center my-4">{{title}}</h2>
                    {{> shoppost}}
                </div>
                <hr>
            {{/with}}
        </div>
        <div>
        {{> shop-action}}
        </div>
    </div>
</main>