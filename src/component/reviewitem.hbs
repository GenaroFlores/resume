<div class="card p-3 mb-5">
    <div class="card my-3 p-2">
        <div class="card-header">
            {{#with title}}
                <h5 class="card-title">{{userName}}</h5>
                <p class="card-text">{{caption}}</p>
                <p class="card-text">{{date}}</p>
            {{/with}}
        </div>
        <div class="card-body">

            {{#with reviewBody}}

                {{#with seller}}
                    <p>{{title}}: <b>{{value}}</b></p>
                {{/with}}
                {{#with rating}}
                    <p>{{title}}: <b>{{value}}</b></p>
                {{/with}}
                {{#each text}}
                    {{this}}
                {{/each}}
                {{#with advantages}}
                    <p class="mt-2"><b>{{title}}:</b> {{text}}</p>
                {{/with}}
                {{#with disadvantages}}
                    <p><b>{{title}}:</b> {{text}}</p>
                {{/with}}
                {{#each images}}
                    <img src={{this}} alt="Product photo" class="ps-1 pt-1 mb-3" height="100px" width="100px">
                {{/each}}

        </div>
    </div>

    {{#each coments}}
        <div class="card my-3 ms-5">
            <div class="card-body">
                <h4>{{userName}}</h4>
                <p>{{date}}</p>
                <p>{{text}}</p>
            </div>
        </div>
    {{/each}}

            {{/with}}

</div>